		//$("选择器").hover(infunction,outfunction);   *****************************
		$("li").hover(function(){
			$(this).css("background","red");
		},function(){
			$("li").css("background","#fff");
		});
	
		
		$("p").toggle(//点击时，让三个背景图轮流切换
		  function(){
		  $("body").css("background-color","green");},
		  function(){
		  $("body").css("background-color","red");},
		  function(){
		  $("body").css("background-color","yellow");}
		);
		
		
		
