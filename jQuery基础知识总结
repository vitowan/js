	$(function(){
		var str = "iloveyouphp";
		var p =/love/;//正则
		console.log(p);
		console.log(typeof p);
	// test()  用于检测一个字符串是否匹配某个模式

	//如果字符串中有匹配的  返回true  否则是false
	var a = p.test(str);
	console.log(a); //true


	//exec() 方法用于检索字符串中的正则表达式的匹配
	//返回一个数组  用于存放匹配的结果 如果没有找到  返回值为null

